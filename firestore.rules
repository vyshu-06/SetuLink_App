rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, update: if isOwner(userId);
      allow create: if isAuthenticated(); // Allow creation during signup
      
      // Admins can read/write all users
      allow read, write: if isAdmin();

      // Public can read basic profile of craftizens (for job matching)
      // Note: In production, consider a separate public 'profiles' collection to hide PII
      allow read: if isAuthenticated() && resource.data.role == 'craftizen';
    }

    // Jobs collection
    match /jobs/{jobId} {
      // Creator can read/write their job
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.assignedTo == request.auth.uid);
      
      // Admins can access all jobs
      allow read, write: if isAdmin();

      // Craftizens can read open jobs (for applying)
      allow read: if isAuthenticated() && resource.data.jobStatus == 'open'; 
      // Note: More strict filtering should be done via queries/functions
    }

    // Disputes collection
    match /disputes/{disputeId} {
      // Participants can read/write
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && (resource.data.raisedBy == request.auth.uid || resource.data.craftizenId == request.auth.uid);
      
      // Admins can manage disputes
      allow read, write: if isAdmin();
    }

    // Chats/Messages collection (assuming subcollection or root)
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && (resource.data.participants[request.auth.uid] == true);
    }
    
    // Referrals collection (Internal/Admin mostly)
    match /referrals/{refId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated(); // Created via Cloud Function usually, but if client writes initial log
    }
  }
}
